<!-- 首页 -->
<view class="home">
  <image class="bg" src="../../assets/bg0.png"></image>
  <view class="hd">
    <image class="hd-bg" src="../../assets/h-top-decoration.png"></image>
    <image class="hd-title" src="../../assets/h-title.png"></image>
    <view class="hd-box">
      <image class="hd-avatar" src="{{userInfo.avatarUrl}}"></image>
